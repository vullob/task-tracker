<h1>Show User</h1>

<ul>

  <li>
    <strong>Email:</strong>
    <%= @user.email %>
  </li>
 <li>
    <strong>Manager:</strong>
    <%= @user.manager && @user.manager.email || "none" %>
 </li>
    <%= render TaskTrackerWeb.UserView, "index.html",
              Map.merge(assigns, %{users: @user.underlings, view: :underlings}) %>

</ul>

<span><%= link "Edit", to: Routes.user_path(@conn, :edit, @user) %></span>
<span><%= link "Back", to: Routes.user_path(@conn, :index) %></span>
